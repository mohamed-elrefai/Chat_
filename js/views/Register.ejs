<div class="wrapper">
    <section class="form sigup">
        <header>Sagen</header>
        <form action="/register" method="post" enctype="multipart/form-data" >
            <div class="error-txt"><%- include('./Error/messages.ejs') %> </div>
            <div class="name-detail">
                <div class="field input">
                    <label>First Name</label>
                    <input type="text" name="fname" placeholder="First Name" value="<%= typeof fname != 'undefined' ? fname : '' %>" required>
                </div>
                <div class="field input">
                    <label>Last Name</label>
                    <input type="text" name="lname" placeholder="Last Name" value="<%= typeof lname != 'undefined' ? lname : '' %>" required>
                </div>
            </div>
                <div class="field input">
                    <label>Email Addres</label>
                    <input type="email" name="email" placeholder="Email" value="<%= typeof email != 'undefined' ? email : '' %>" required>
                </div>
                <div class="field input">
                    <label>Password</label>
                    <input type="password" name="password" placeholder="Password" value="<%= typeof password != 'undefined' ? password : '' %>" required>
                    <i class="fas fa-eye"></i>
                </div>
                <div class="field input">
                    <label>Confirm Password</label>
                    <input type="password" name="password2" placeholder="Confirm Password" value="<%= typeof password2 != 'undefined' ? password2 : '' %>" required>
                    <i class="fas fa-eye"></i>
                </div>
                <div class="field image">
                    <label>Select image</label>
                    <input type="file" name="img" required>
                </div>
                <div class="field button">
                    <input type="submit" name="btn" value="Contuinue to Chat ">
                </div>
        </form>
        <div class="link">Already singned up??<a href="/signin"> Login now</a></div>
    </section>
</div>	